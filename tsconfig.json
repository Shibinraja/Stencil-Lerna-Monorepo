{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "es6"
    ],
    "baseUrl": ".",
    "paths": {
      "@workspace/stencil": [
        "./packages/gantt-component"
      ],
      "@workspace/stencil/loader": [
        "./packages/gantt-component/loader"
      ],
      "@workspace/angular": [
        "/packages/angular-library/dist/component-library"
      ],
      "@workspace/react": [
        "./packages/react/dist"
      ],
      "@workspace/vue": [
        "./packages/vue/dist"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/__tests__/**"
  ]
}